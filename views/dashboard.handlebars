<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user_name}}!</h2>
  </div>

  <h2>This is your Blog-Dashboard</h2>
  <h3>Here you can see your post and manage them! (amazing, right?)</h3>


</div>



  {{#each posts as |post|}}

  <div class="posts">

    <div id="postTitle">
      <table style="width:100%">
        <tr>
          <th>{{id}}</th>
          
        </tr>
        <tr>
          <th>{{post_title}}</th>
        </tr>
        <div class="post">

          <tr>
            <td>{{post_information}}</td>

          </tr>

      </table>



    </div>
    <p class="none">{{id}}</p>
                                <button class="deletebtn">Delete</button>



  </div>




{{/each}}

<h1>Add a new post!</h1>
<div class="login">
  <form class="form login-form">
    <h2>Post Title</h2>
    <textarea id="newPostTitle" type="user"> </textarea>
    <h2>Post content</h2>
    <textarea id="newPostContent" rows="5" cols="50">
    Write your post here!
</textarea><br>
    <button id="postBtn" type="submit" value="submit"> Submit</button>
  </form>
</div>

<script src="/js/posts.js"></script>